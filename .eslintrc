{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "airbnb"
  ],
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jquery": true,
    "mocha": true
  },
  "rules": {
    # "comma-dangle": ["error", "never"],
    "consistent-return": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Router", "Schema", "URLSlugs", "LoadingHOC"] }],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "arrow-parens": ["error", "as-needed"],

    // TODO: turn on as much as possible rules back
    "dot-notation": "off",
    "linebreak-style": "off",
    "no-mixed-operators": "off",
    "class-methods-use-this": "off",
    "comma-dangle": "off",
    "react/forbid-prop-types": "off",
    "react/jsx-filename-extension": "off",
    "react/jsx-indent": "off",
    "react/no-string-refs": "off",
    "react/jsx-no-target-blank": "off",
    "jsx-a11y/label-has-for": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "import/no-named-as-default": "off",
    "import/extensions": "off",
    //done "import/imports-first": "off",
    //done "import/prefer-default-export": "off",
    "import/no-extraneous-dependencies": "off",
    //done "comma-spacing": "off",
    //done "func-names": "off",
    //done "quote-props": "off",
    "no-param-reassign": "off",
    //done "prefer-arrow-callback": "off",
    // done "space-before-function-paren": "off",
    //done "keyword-spacing": "off",
    //done "no-plusplus": "off",
    //done "no-return-assign": "off",
    "no-shadow": "off",
    "arrow-body-style": "off",
    "array-callback-return": "off",
    "no-restricted-syntax": "off",
    //done "guard-for-in": "off",
    //done "space-infix-ops": "off",
    "max-len": "off",
    "no-global-assign": "off",
    //done "radix": "off",
    "no-nested-ternary": "off"
  }
}
