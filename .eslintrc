{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "airbnb"
  ],
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jquery": true,
    "mocha": true
  },
  "rules": {
    # "comma-dangle": ["error", "never"],
    "consistent-return": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Router", "Schema", "URLSlugs", "LoadingHOC"] }],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "arrow-parens": ["error", "as-needed"],

    // TODO: turn on as much as possible rules back
    "class-methods-use-this": "off",
    "react/forbid-prop-types": "off",
    "react/jsx-filename-extension": "off",
    "import/extensions": "off",
    "import/no-extraneous-dependencies": "off",
    "no-shadow": "off",
    "arrow-body-style": "off",
    "max-len": "off",
    "linebreak-style": "off",
  }
}
